<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="1100px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time2"
        android:layout_toStartOf="@+id/time2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBar"
        android:layout_toStartOf="@+id/seekBar"
        android:text="00:00" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statContents"
        android:layout_alignEnd="@+id/BookMark"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:text="00:00 / 00:00 " />

    <RelativeLayout
        android:id="@+id/BookMark"
        android:layout_width="1508px"
        android:layout_height="290px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="18dp">

    </RelativeLayout>

    <Button
        android:id="@+id/homeTeam"
        android:layout_width="262px"
        android:layout_height="98px"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/BookMark"
        android:layout_marginTop="32dp"
        android:text="우리 팀" />

    <Button
        android:id="@+id/awayTeam"
        android:layout_width="262px"
        android:layout_height="98px"
        android:layout_alignTop="@+id/homeTeam"
        android:layout_marginLeft="-10px"
        android:layout_toEndOf="@+id/homeTeam"
        android:text="상대 팀" />

    <Button
        android:id="@+id/diff"
        android:layout_width="262px"
        android:layout_height="98px"
        android:layout_alignTop="@+id/awayTeam"
        android:layout_marginLeft="-10px"
        android:layout_toEndOf="@+id/awayTeam"
        android:text="비교분석" />

    <RelativeLayout
        android:layout_width="1300px"
        android:layout_height="735px"
        android:layout_alignStart="@+id/homeTeam"
        android:layout_below="@+id/homeTeam"
        android:layout_marginTop="42dp"
        android:id="@+id/statContents">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:text="공간점유" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:text="슛 위치" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="120dp"
            android:text="이동거리" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginStart="-10dp"
            android:layout_marginBottom="175dp"
            android:text="마크 성공률" />

        <ImageView
            android:id="@+id/spaceType1"
            android:layout_width="330px"
            android:layout_height="300px"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="45dp"
            android:layout_marginTop="23dp"
            android:background="#223553"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/spaceType2"
            android:layout_width="330px"
            android:layout_height="300px"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/spaceType1"
            android:layout_marginBottom="14dp"
            android:background="#223553"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/shootType1"
            android:layout_width="330px"
            android:layout_height="300px"
            android:layout_alignTop="@+id/spaceType1"
            android:layout_centerHorizontal="true"
            android:background="#223553"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/shootType2"
            android:layout_width="330px"
            android:layout_height="300px"
            android:layout_alignStart="@+id/shootType1"
            android:layout_alignTop="@+id/spaceType2"
            android:background="#223553"
            app:srcCompat="@android:color/transparent" />
    </RelativeLayout>

</RelativeLayout>